// 식재료 보관 장소
enum FoodStorageArea {
  freezer // 냉동실
  fridge // 냉장실
  roomTemp // 실온
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "foreignKeys"
}

model User {
  id                Int                @id @default(autoincrement())
  nickname          String
  kakaoId           String             @unique
  StoredIngredients StoredIngredient[]
}

// 식재료 카테고리
model IngredientCategory {
  ingredientName   String             @id
  category         String
  StoredIngredient StoredIngredient[]
}

// 보관 중인 식재료
model StoredIngredient {
  id                 Int                @id @default(autoincrement())
  IngredientCategory IngredientCategory @relation(fields: [ingredientName], references: [ingredientName])
  ingredientName     String
  user               User               @relation(fields: [userId], references: [id])
  userId             Int
  storageArea        FoodStorageArea // 보관 장소
  count              Int // 수량 
  expirationDate     DateTime // 유통기한
}
