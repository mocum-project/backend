// 식재료 보관 장소
enum FoodStorageArea {
  freezer // 냉동실
  fridge // 냉장실
  roomTemp // 실온
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "foreignKeys"
}

model User {
  id          Int          @id @default(autoincrement())
  nickname    String
  kakaoId     String       @unique
  StoredFoods StoredFood[]
}

// 식재료 카테고리
model FoodCategory {
  foodName   String       @id
  category   String
  StoredFood StoredFood[]
}

// 보관 중인 식재료
model StoredFood {
  id             Int             @id @default(autoincrement())
  FoodCategory   FoodCategory    @relation(fields: [foodName], references: [foodName])
  foodName       String
  user           User            @relation(fields: [userId], references: [id])
  userId         Int
  storageArea    FoodStorageArea // 보관 장소
  count          Int // 수량 
  expirationDate DateTime // 유통기한
}
